@using Services.Accounts
@model Login
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/Assests/Css/login.css">

</head>
<!-- navigation end -->
<!-- protected page txt start -->
<div class="bg-blue">
    <div class="nav container d-flex">
        <h1 class="unique-text">Protected Page</h1>
        <p class="gray w-400">
            There are many variations of passages of Lorem Ipsum available, have
            suffered alteration in some form.
        </p>
    </div>
</div>
<!-- protected page txt end -->
<!-- Login start -->
<div class="login-container d-flex center">
    <div class="bg-light-gray d-flex f-dir-column">
        <div class="col-md-6 col-md-offset-3 text-center">
            <div class="login">
                <div class="blue protected-form-heading">
                    <div class="login-text">
                        <h2 class="blue center">Login</h2>
                        <span class="gray">Please login using account detail bellow.</span>
                    </div>
                    <div class="login-form">
                        <form  method="post" asp-action="Login" asp-controller="Account">
                            <input asp-for="EmailOrUsername" type="text" placeholder="Username">
                            <input asp-for="Password" type="password"  placeholder="Password">
                            <div class="button-box">
                                <div class="login-toggle-btn">
                                    <input asp-for="RememberMe" type="checkbox" id="remember">
                                    <label class="gray" for="remember">Remember me</label>
                                    <a href="#">Forgot Password?</a>
                                </div>
                                <button type="submit" class="default-btn">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->
