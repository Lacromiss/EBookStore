@using Core.Entities
@model ContactUs
@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/Assests/Css/contact.css">

</head>
<!-- navigation end -->
<!-- contact us section start -->
<div class="bg-blue">
    <div class="nav container d-flex">
        <h1 class="unique-text">Contact Us</h1>
        <p class="gray w-400">
            There are many variations of passages of Lorem Ipsum available, have
            suffered alteration in some form.
        </p>
    </div>
</div>
<!-- contact us section end -->
<!-- keep in touch start -->
<div class="keepInTouch">
    <div class="container contact-container d-flex space-between">
        <div class="contact-left d-flex f-dir-column">
            <h2 class="contact-heading blue">Keep in Touch</h2>
            <p class="gray">
                There are many variations of passages of Lorem Ipsum available, but
                the majority have suffered alteration in some form, by injected
                humour, or randomised words which don't look even slightly
                believable.
            </p>
            <div class="contact-icons-container d-flex f-dir-column">
                <div class="contact-blocks d-flex align-center">
                    <div class="contact-icon">
                        <img src="~/Assests/assets/img/home-icon.svg" alt="home icon" />
                    </div>
                    <div class="contact-icon-txt">
                        <h3 class="blue">Vist Us :</h3>
                        <p class="gray">No: 09a, Downtown, San Dieago, USA.</p>
                    </div>
                </div>
                <div class="contact-blocks d-flex align-center">
                    <div class="contact-icon">
                        <img src="~/Assests/assets/img/envelope-icon.svg" alt="envelope icon" />
                    </div>
                    <div class="contact-icon-txt">
                        <h3 class="blue">Drop Us :</h3>
                        <p class="gray">support@pages.com</p>
                    </div>
                </div>
                <div class="contact-blocks d-flex align-center">
                    <div class="contact-icon">
                        <img src="~/Assests/assets/img/phone-icon.svg" alt="phone icon" />
                    </div>
                    <div class="contact-icon-txt">
                        <h3 class="blue">Call Us :</h3>
                        <p class="gray">Call: 1-800-123-9999</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- form start -->
        <div class="d-flex f-dir-column form-container">
            <form asp-action="Create" method="post" asp-area="Manage" asp-controller="ContactUs" class="d-flex f-dir-column">
                <div  class="name-email-inputs d-flex space-between align-center">
                    <label asp-for="Name">
                        <img src="~/Assests/assets/img/user.png" alt="user icon" />
                        <input asp-for="Name" type="text" name="userName" placeholder="Name" id="userName" />
                    </label>

                    <label class="email" asp-for="Email">
                        <img src="~/Assests/assets/img/mail.png" alt="mail icon" />
                        <input asp-for="Email" type="email" name="email" placeholder="Email" id="email" />
                    </label>
                </div>
                <label class="phone" asp-for="PhoneNumber">
                    <img src="~/Assests/assets/img/phone.png" alt="phone icon" />
                    <input asp-for="PhoneNumber" type="text" name="phone"  placeholder="Phone" />
                </label>
                <label asp-for="Message">
                    <img src="~/Assests/assets/img/edit.png" alt="edit icon" />
                    <textarea asp-for="Message" name="textarea" id="textarea" placeholder="Message"></textarea>
                </label>

                <label class="gray check d-flex align-center" asp-for="RememberMe">
                    <input asp-for="RememberMe" type="checkbox" name="check" id="check" />
                    @Html.DisplayNameFor(model => model.RememberMe)
                </label>
                <button type="submit" class="btn btn-send">Send Message</button>
            </form>
        </div>
    </div>
</div>
<!-- form end -->
<!-- keep in touch end -->
